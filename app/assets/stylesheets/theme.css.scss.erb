@import url(https://fonts.googleapis.com/css?family=Bree+Serif);
@import url(https://fonts.googleapis.com/css?family=Open+Sans:400,600);

@mixin gradient($top, $bottom) {
  background: $top; /* Old browsers */
  background: -moz-linear-gradient(top, $top 0%, $bottom 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,$top), color-stop(100%,$bottom)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, $top 0%,$bottom 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, $top 0%,$bottom 100%); /* Opera11.10+ */
  background: -ms-linear-gradient(top, $top 0%,$bottom 100%); /* IE10+ */
  background: linear-gradient(top, $top 0%,$bottom 100%); /* W3C */
}

h1, h2, h3, h4, h5, h6 {
  font-family: "Bree Serif", serif;
}

body {
  &, input {
    font-family: "Open Sans", sans-serif; /* Because Internet Explorer is stupid */
  }
  
	font-size: 10pt;
	color: white;
	background-color: #333;
	background-image: url("<%= asset_path("background.png") %>"); }

input { font-size: 8pt; }

.wrapper {
	box-shadow: 0 0 10px #1C1C1C;
	border-top: none;
	overflow: auto;
	
  > header {
	  background-image: url("<%= asset_path("screenshots/1.png") %>"); }

	> .authentication {
	  @include gradient(#444, #333);
	  border-top: solid 1px #252525;

	  a { color: white; }
	  
	  input[type='text'], input[type='password'] {
      	border-radius: 10px;
	    border: none;
	    box-shadow: inset 1px 1px 3px gray; }
    input[type='submit'] {
      @include gradient(#666, #333);
      
      border-radius: 10px;
      border: none;
      box-shadow: inset 0 0 2px white;
      color: white;
      cursor: pointer;

      &:hover {
        box-shadow: inset 0 0 5px white; }
      &:active {
        background: none;
        background-color: #444;
        box-shadow: inset 0 0 2px black; }
    }
	}
	  
  > nav {
	  ul {
	    background-color: #2A2A2A;
	    border-top: solid 1px #444;
	    border-bottom: solid 1px #444; }
	  li {
	    border-right: solid 1px #444;
      a {
        color: white;
        text-decoration: none;
        &:hover {
          box-shadow: inset 0 0 5px #444; }
        &:active {
          box-shadow: inset 0 0 5px #222; }
      }
    }
  }

  > section {
    background-color: white;
    color: black;

    > h1 {
      font-size: 300%;
      margin: 0.5em 0 0 0; }
  }

  > footer {
    font-size: 80%;
    text-align: center;
    background-color: #2A2A2A;
    overflow: auto; }
}

a {
  color: blue;
  &:hover {
    color: red; }
}

h1, h2, h3, h4, h5, h6 {
  font-weight: normal; }

h1 {
  a, a:hover {
    color: black;
    text-decoration: none; }
}

textarea {
  font-family: 'Courier New', monospace;
  font-size: 1em; }

header h1, section h1, article h1 {
  font-size: 200%;
  margin-bottom: 0.5em; }

.flash {
  padding: 10px;
  margin: 0;
  border-bottom: solid 1px black;
  color: black;
  
  &.alert { background-color: #F88; border-color: red; }
  &.notice { background-color: #AFA; border-color: green; }
}

div.field_with_errors {
  color: red; }

th {
  text-align: left; }
